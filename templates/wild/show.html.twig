{# templates/wild/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media block-main">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <div class="card-body">
                <h5 class="card-title" class="mt-0">{{ program.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">Categorie : {{ program.category.name }}
                    <p>{{ program.summary }}</p></h6>
                {% for season in seasons %}
                    <div class="card-body">
                        <div class="card-title">
                            <h5 class="card-title text-center" class="mt-0">{{ program.title }}</h5></div>
                        <div class="card text-center">
                            <a href="{{ path('show_season', {'id' : season.id}) }}">Saison : {{ season.number }}<br></a>
                        </div>
                    </div>
                {% endfor %}
                <a href="{{ path('wild_index') }}">
                    <button type="button" class="btn btn-secondary">Retour aux s√©ries</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
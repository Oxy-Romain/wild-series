{# templates/wild/season.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<div class="mainseason">
    <h1>Saison : {{ seasons.number }} de {{ program.title }} </h1>
    <p>{{ seasons.description }}</p>
    <div class="card">
        <div class="card-body">
            <p class="card-title">Liste des Ã©pisodes:</p>
            {% for episode in episodes %}
                <div class="row">
                    <div class="col-sm-10 offset-sm-1">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">{{ episode.number }}: {{ episode.title }}</h5>
                                <p class="card-text">{{ episode.synopsis }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="/wild/show/{{ program.title |replace({' ':'-'})|lower }}">>Retour</a>
    </div>
</div>
    {% endblock %}
